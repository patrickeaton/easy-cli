    "easy-cli",
    "cli-framework",
    "cli-app",
    "cli-application",
    "cli-tool",
    "cli-tools",
    "yargs",
    "yargs-interactive",
    "cli-progress",
    "cli-table",
    "ora",
    "chalk"
