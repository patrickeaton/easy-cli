  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./helpers": "./dist/helpers/index.js",
    "./themes": "./dist/themes/index.js",
    "./prompts": "./dist/prompts/index.js",
    "./config": "./dist/config/index.js"
  },
  "author": "@patrickeaton",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
