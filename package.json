    "prepare": "husky"
  },
  "dependencies": {
    "@types/cli-progress": "^3.11.6",
    "app-root-path": "^3.1.0",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "cli-table": "^0.3.11",
    "csv-parser": "^3.2.0",
    "envfile": "^7.1.0",
    "objects-to-csv": "^1.3.6",
    "ora": "^3.2.0",
    "strip-ansi": "^6.0.0",
    "typescript": "^5.3.3",
    "yaml": "^2.7.0",
    "yargs": "^17.7.2",
    "yargs-interactive": "^3.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/cli-table": "^0.3.4",
    "@types/node": "^20.11.5",
    "@types/yargs": "^17.0.32",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "rollup": "^4.9.5",
    "rollup-plugin-cleandir": "^3.0.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.27.6",
    "typedoc-plugin-markdown": "^4.4.1"
