{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "es2019",
    "moduleResolution": "node",

    "sourceMap": true,
    "declaration": true,

    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",  
    "*.json",
    "dist"
  ]
}